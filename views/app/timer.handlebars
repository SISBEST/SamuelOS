<div>
	<input type="number" placeholder="Minutes" style="background-color: #272822;color:white;border:none;border-radius:5px;" />
	<button>Start</button>
</div>
<h1 style="color:white;font-size:80px;">00:00</h1>
<script>
	function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    setInterval(function () {
        minutes = parseInt(timer / 60, 10);
        seconds = parseInt(timer % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        display.textContent = minutes + ":" + seconds;

        if (--timer < 0) {
            timer = duration;
        }
    }, 1000);
}

document.querySelector("button").onclick = function () {
    var minutes = 60 * document.querySelector('input').value,
        display = document.querySelector('h1');
		document.querySelector('div').style.display = 'none';
    startTimer(minutes, display);
};
</script>